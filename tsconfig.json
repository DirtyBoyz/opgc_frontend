{
    "compilerOptions": {
        "lib": [
            "dom",
            "es2015"
        ],
        "typeRoots" : ["node_modules/@types", "src/types"],
        "jsx": "react",
        "esModuleInterop": true,
        "sourceMap": true,
        "baseUrl": "src",
        "outDir": "dist",
        "paths": {
            "@/*": ["./*"],
            "~/*": ["./*"]
        },
        "moduleResolution": "node", // 모듈의 경로탐색 방법을 정의
        "module": "esnext", // 모듈 해석방식을 정의, commonjs destroys 'dynamic imports' which is used for code splitting
        "target": "es5"
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "dist",
      ".idea",
      ".git",
      ".vscode",
      "node_modules"
    ]
  }