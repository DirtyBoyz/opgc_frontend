{
    "compilerOptions": {
        "lib": [
            "dom",
            "es2015"
        ],
        "typeRoots" : ["node_modules/@types", "src/types/**/*"],
        "jsx": "react",
        "esModuleInterop": true,
        "sourceMap": true,
        "baseUrl": "src",
        "outDir": "dist",
        "paths": {
            "@/*": ["./*"],
            "~/*": ["./*"]
        },
        "target": "ES5"
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "dist",
      ".idea",
      ".git",
      ".vscode",
      "node_modules"
    ]
  }